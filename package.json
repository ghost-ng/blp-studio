{
  "name": "blp-studio",
  "version": "0.1.0",
  "description": "Visual BLP asset editor for Civilization VII modding â€” browse, preview, replace textures, and export game-ready mod packages",
  "author": "ghost_ng",
  "license": "MIT",
  "private": true,
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "npm run build && electron-builder --win",
    "package:dir": "npm run build && electron-builder --win --dir",
    "icons": "node scripts/gen-icon.mjs && node scripts/gen-ico.mjs",
    "cli": "npx tsx scripts/cli.ts"
  },
  "dependencies": {
    "koffi": "^2.9.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^34.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^3.0.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.blpstudio.app",
    "productName": "BLP Studio",
    "copyright": "Copyright (c) 2025 ghost_ng",
    "forceCodeSigning": false,
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "BLP-Studio-${version}-portable.exe"
    },
    "asar": true,
    "asarUnpack": [
      "resources/**"
    ]
  }
}
